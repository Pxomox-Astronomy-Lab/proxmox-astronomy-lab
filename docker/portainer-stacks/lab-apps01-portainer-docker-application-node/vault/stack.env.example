# Vault Container
CONTAINER_NAME=lab-vault01-lab-apps01
VAULT_VERSION=1.14.0

# Networking
VAULT_HTTP_PORT=8200

# Storage
VOLUME_DATA=vault_data
VOLUME_CONFIG=vault_config

# Auto-Unseal Configuration (Traditional Variables)
VAULT_AZURE_KEYVAULT=azure-lab-keyvault01
VAULT_AZURE_STORAGE=backupskyvault01
