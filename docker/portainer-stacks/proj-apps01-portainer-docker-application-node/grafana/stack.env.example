# Grafana Container
CONTAINER_NAME=proj-grafana01-proj-apps01
GRAFANA_VERSION=10.2.2

# Networking
GRAFANA_HTTP_PORT=3000

# Storage
VOLUME_DATA=grafana_proj_data

# PostgreSQL Database (Traditional Variables)
DB_HOST=lab-db01
DB_PORT=5432
DB_USER=grafana_proj
DB_PASS=changeme
DB_NAME=grafana_proj

# Admin Credentials (Traditional Variables)
ADMIN_USER=admin
ADMIN_PASS=changeme
