# Nginx Proxy Manager Container
CONTAINER_NAME=lab-npm01-lab-apps01
NPM_VERSION=2.9.18

# Networking
HTTP_PORT=80
HTTPS_PORT=443
ADMIN_PORT=81

# Storage
DATA_VOLUME=npm_data
LETSENCRYPT_VOLUME=npm_letsencrypt

# PostgreSQL Backend (Traditional Variables)
DB_POSTGRES_HOST=lab-db01
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=npm
DB_POSTGRES_PASSWORD=changeme
DB_POSTGRES_NAME=npm

# Cloudflare API Credentials (Traditional Variables)
CF_API_EMAIL=email@example.com
CF_API_KEY=your-cloudflare-api-key
