# GLPI Container
CONTAINER_NAME=lab-glpi01-lab-apps01
GLPI_VERSION=10.0.10

# Networking
GLPI_HTTP_PORT=8080

# Storage
VOLUME_DATA=glpi_data

# Database Backend (Traditional Variables)
GLPI_DB_HOST=lab-db01
GLPI_DB_NAME=glpi
GLPI_DB_USER=glpi
GLPI_DB_PASSWORD=changeme
