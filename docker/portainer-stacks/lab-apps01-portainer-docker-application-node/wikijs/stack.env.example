# Wiki.js Container
CONTAINER_NAME=lab-wikijs01-lab-apps01
WIKIJS_VERSION=2.5.300

# Networking
WIKI_HTTP_PORT=3000

# Storage
VOLUME_DATA=wikijs_data

# PostgreSQL Database (Traditional Variables)
DB_HOST=lab-db01
DB_PORT=5432
DB_USER=wikijs
DB_PASS=changeme
DB_NAME=wikijs

# Git Repository Integration (Traditional Variables)
GIT_REPO_URL=https://github.com/example/wikijs-docs.git
GIT_BRANCH=main
GIT_USERNAME=wikiuser
GIT_PASSWORD=securepassword
