# MongoDB Container
CONTAINER_NAME=lab-mongodb01-lab-db01
MONGODB_VERSION=6.0

# Networking
MONGODB_PORT=27017

# Storage
VOLUME_DATA=mongodb_data

# MongoDB Authentication (Traditional Variables)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme
